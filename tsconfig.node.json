{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "electron/main/**/*",
    "electron/preload/**/*",
    "drizzle.config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}
